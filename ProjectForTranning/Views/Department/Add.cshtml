@model Department

<h1 class="text-center mb-4">Create New Department</h1>

<form asp-action="SaveDept" asp-controller="Department" method="post" class="p-4 border rounded shadow-sm">

    <div class="mb-3">
        <label for="Name" class="form-label">Department Name</label>
        <input id="Name" type="text" name="Name" class="form-control" value="@Model?.Name" required />
    </div>

    <div class="mb-3">
        <label for="ManagerName" class="form-label">Manager Name</label>
        <input id="ManagerName" type="text" name="ManagerName" class="form-control" value="@Model?.ManagerName" required />
    </div>

    <div class="text-center">
        <input type="submit" class="btn btn-success btn-lg" value="Create" />
    </div>

</form>

<!-- JavaScript for Button Hover Effect -->
<script>
    const submitButton = document.querySelector('input[type="submit"]');
    submitButton.addEventListener('mouseenter', function () {
        submitButton.style.backgroundColor = '#28a745';
        submitButton.style.transition = 'background-color 0.3s ease';
    });

    submitButton.addEventListener('mouseleave', function () {
        submitButton.style.backgroundColor = '#4CAF50';
    });
</script>

