@model List<Department>

<!-- Add New Department Button -->
<div class="mb-4 text-center">
    <a href="/Department/Add" class="btn btn-primary btn-lg">Add New Department</a>
</div>

<hr />

<!-- Department Table -->
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Manager Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ManagerName</td>
                <td>
                    <a href="/Department/Edit/@item.Id?"  class="btn btn-warning btn-sm">Edit</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- JavaScript for Button Hover Effect -->
<script>
    // Add hover effect on the Edit button
    const editButtons = document.querySelectorAll('.btn-warning');
    editButtons.forEach(button => {
        button.addEventListener('mouseenter', function () {
            button.style.backgroundColor = '#ffc107';
            button.style.transition = 'background-color 0.3s ease';
        });

        button.addEventListener('mouseleave', function () {
            button.style.backgroundColor = '#ffcc00';
        });
    });
</script>

<!-- Bootstrap CSS for styling -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
