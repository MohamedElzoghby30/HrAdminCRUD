@model List<Empolyee>

<div class="container my-5">
    <!-- تحسين مكان زر "Add New Employee" -->
    <div class="text-center mb-4">
        <a href="/Employee/Add" class="btn btn-primary btn-lg add-employee-btn">
            <i class="bi bi-plus-circle"></i> Add New Employee
        </a>
    </div>

    <hr />

    <!-- جدول البيانات -->
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>JobTitle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr class="table-row">
                    <td>@i.Name</td>
                    <td>@i.JobTitle</td>
                    <td class="action-buttons">
                        <a href="/Employee/Edit/@i.Id" class="btn btn-warning btn-sm action-btn">Edit</a>
                        <a href="/Employee/Delete/@i.Id" class="btn btn-danger btn-sm action-btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- JavaScript لزيادة التفاعلية -->
<script>
    // إضافة تأثير عند التمرير على الصفوف
    const tableRows = document.querySelectorAll('.table-row');
    tableRows.forEach(row => {
        row.addEventListener('mouseenter', function () {
            row.style.backgroundColor = "#f1f1f1"; // تغيير الخلفية عند المرور
        });
        row.addEventListener('mouseleave', function () {
            row.style.backgroundColor = ""; // إعادة الخلفية إلى اللون الأصلي عند المغادرة
        });
    });

    // تأثير عند النقر على زر الحذف
    const deleteBtns = document.querySelectorAll('.btn-danger');
    deleteBtns.forEach(btn => {
        btn.addEventListener('click', function () {
            if (!confirm('Are you sure you want to delete this employee?')) {
                event.preventDefault(); // منع الحذف إذا تم الضغط على "إلغاء"
            }
        });
    });
</script>

